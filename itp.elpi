accumulate utils.

prove Type ProofTerm OutScript :-
    prove Type [] ProofTerm OutScript.

prove Type InScript ProofTerm OutScript :-
    of X Type ProofTerm,
    loop [([],X)] OutScript InScript,
    print "finished" ProofTerm.

